@{
    Layout = null;
}

<div class="main-content">

    <div class="dash-items-wrapper">
        <div class="dash-items">
            <div class="dash-item">
                <div class="widget bg-yellow p-lg text-center orange">
                    <div class="m-b-md">
                        <h1 class="m-xs ng-binding">{{dashboardViewModel.questionsNumber}}</h1>
                        <h3 class="font-bold no-margins">
                            Questions
                        </h3>
                    </div>
                </div>
            </div>
            <div class="dash-item">
                <div class="widget bg-navy p-lg text-center orange">
                    <div class="m-b-md">
                        <div class="chart-holder">
                            <canvas id="dunut-chart" tc-chartjs chart-type="doughnut" chart-data="dashboardViewModel.pieData" chart-options="dashboardViewModel.myOptions" width="74" height="74"></canvas>
                        </div>
                        @*<pie-chart data="dashboardViewModel.pieData" options="{thickness: 200}" class="dash-pie">

                </pie-chart>*@
                        <h3 class="font-bold no-margins">
                            Progress
                        </h3>
                    </div>
                </div>
            </div>
            <div class="dash-item">
                <div class="widget bg-red p-lg text-center orange">
                    <div class="m-b-md">
                        <h1 class="m-xs ng-binding">{{dashboardViewModel.successRate}} %</h1>
                        <h3 class="font-bold no-margins orange">
                            Success Rate
                        </h3>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="bottom-lnks ng-scope">
        <div class="file-box-wrapper">
            <div class="file-box">
                <div class="file">
                    <a href="javascript:void(0)" ng-click="explore()">
                        <div class="icon">
                            <img src="~/Scripts/lib/template-files/img/ico-1.png" alt="book">
                        </div>
                        <div class="file-name orange">
                            Explore
                        </div>
                    </a>
                </div>
            </div>
